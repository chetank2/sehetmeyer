---
interface Props {
  quote: string;
  author: string;
  role: string;
  company: string;
}

const { quote, author, role, company } = Astro.props;
---

<div class="bg-white p-8 rounded-xl border border-gray-100 shadow-sm hover:shadow-md transition-all">
  <div class="mb-6">
    <svg class="w-10 h-10 text-gray-200" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
    </svg>
  </div>
  <blockquote class="text-lg text-gray-700 leading-relaxed mb-6">
    "{quote}"
  </blockquote>
  <div class="flex items-center gap-4">
    <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
      <span class="text-gray-600 font-semibold">{author.split(' ').map(n => n[0]).join('')}</span>
    </div>
    <div>
      <p class="font-semibold text-black">{author}</p>
      <p class="text-sm text-gray-500">{role} at {company}</p>
    </div>
  </div>
</div>
