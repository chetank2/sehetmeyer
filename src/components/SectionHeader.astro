---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = true } = Astro.props;
---

<div class={`mb-12 ${centered ? 'text-center' : ''}`}>
  <h2 class="heading-hero text-black mb-4">
    {title}
  </h2>
  {subtitle && (
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      {subtitle}
    </p>
  )}
</div>
