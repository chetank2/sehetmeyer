---
interface Props {
  title: string;
  client: string;
  industry: string;
  excerpt: string;
  slug: string;
  result?: string;
}

const { title, client, industry, excerpt, slug, result } = Astro.props;
---

<article class="bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-all group">
  <div class="h-48 bg-gradient-to-br from-gray-900 to-gray-700 flex items-center justify-center relative">
    <span class="text-6xl opacity-30">ðŸ’¼</span>
    <div class="absolute bottom-4 left-4">
      <span class="px-3 py-1 bg-white/90 rounded text-xs font-medium text-gray-700">{industry}</span>
    </div>
  </div>
  <div class="p-6">
    <p class="text-sm text-gray-500 mb-2">{client}</p>
    <h3 class="text-xl font-semibold text-black mb-3 group-hover:text-gray-700 transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 text-sm leading-relaxed mb-4 line-clamp-2">
      {excerpt}
    </p>
    {result && (
      <div class="bg-green-50 border border-green-100 rounded-lg p-3 mb-4">
        <p class="text-sm text-green-700 font-medium">{result}</p>
      </div>
    )}
    <a 
      href={`/case-studies/${slug}`}
      class="inline-flex items-center text-black font-medium group-hover:gap-2 transition-all"
    >
      View Case Study
      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
