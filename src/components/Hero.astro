---
interface Props {
  title: string;
  subtitle: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  centered?: boolean;
  showTrustedBy?: boolean;
}

const { 
  title, 
  subtitle, 
  primaryCta, 
  secondaryCta,
  centered = true,
  showTrustedBy = false
} = Astro.props;
---

<section class="relative bg-[#ffffff] overflow-hidden min-h-[800px] flex items-center">
  <!-- Hero Background Strips -->
  <div class="absolute inset-0 w-full h-full pointer-events-none transform-gpu">
    <!-- Center Strip -->
    <div class="absolute inset-y-0" style="left: 46.15%; right: 46.15%; background: linear-gradient(to bottom, #73e686, #45cb84);"></div>
    
    <!-- Right Side Strips -->
    <div class="absolute inset-y-0" style="left: 53.85%; right: 38.44%; background: linear-gradient(to bottom, #74e786, #3fd58b);"></div>
    <div class="absolute inset-y-0" style="left: 61.56%; right: 30.78%; background: linear-gradient(to bottom, #74e786, #51e19a); box-shadow: -120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="left: 69.22%; right: 23.07%; background: linear-gradient(to bottom, #74e786, #58e8a1); box-shadow: -120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="left: 76.93%; right: 15.36%; background: linear-gradient(to bottom, #74e786, #5aeea5); box-shadow: -120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="left: 84.64%; right: 7.71%; background: linear-gradient(to bottom, #74e786, #5ef0a8); box-shadow: -120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="left: 92.29%; right: 0%; background: linear-gradient(to bottom, #74e786, #64f9af); box-shadow: -120px 0px 20px 0px rgba(116,231,134,0.37);"></div>

    <!-- Left Side Strips -->
    <div class="absolute inset-y-0" style="right: 53.85%; left: 38.44%; background: linear-gradient(to bottom, #74e786, #3fd58b);"></div>
    <div class="absolute inset-y-0" style="right: 61.56%; left: 30.78%; background: linear-gradient(to bottom, #74e786, #51e19a); box-shadow: 120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="right: 69.22%; left: 23.07%; background: linear-gradient(to bottom, #74e786, #58e8a1); box-shadow: 120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="right: 76.93%; left: 15.36%; background: linear-gradient(to bottom, #74e786, #5aeea5); box-shadow: 120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="right: 84.64%; left: 7.71%; background: linear-gradient(to bottom, #74e786, #5ef0a8); box-shadow: 120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
    <div class="absolute inset-y-0" style="right: 92.29%; left: 0%; background: linear-gradient(to bottom, #74e786, #64f9af); box-shadow: 120px 0px 20px 0px rgba(116,231,134,0.37);"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 container-custom w-full">
    <div class={`${centered ? 'text-center max-w-4xl mx-auto' : 'max-w-3xl'}`}>
      <h1 class="heading-hero text-black mb-8 animate-fade-in opacity-0" style="animation-delay: 0.2s;">
        {title}
      </h1>
      <p class="text-xl lg:text-2xl text-black/80 mb-12 animate-fade-in opacity-0 leading-relaxed" style="animation-delay: 0.4s;">
        {subtitle}
      </p>
      
      <div class={`flex flex-col sm:flex-row gap-4 ${centered ? 'justify-center' : ''} animate-fade-in opacity-0`} style="animation-delay: 0.6s;">
        {primaryCta && (
          <a 
            href={primaryCta.href}
            class="px-8 py-4 bg-black text-white text-lg font-medium rounded-lg hover:bg-gray-900 transition-all shadow-[0_4px_14px_0_rgba(0,0,0,0.25)]"
          >
            {primaryCta.text}
          </a>
        )}
        {secondaryCta && (
          <a 
            href={secondaryCta.href}
            class="px-8 py-4 bg-white/20 backdrop-blur-md text-black border border-black/10 text-lg font-medium rounded-lg hover:bg-white/30 transition-all"
          >
            {secondaryCta.text}
          </a>
        )}
      </div>

      <!-- Trusted By Footer -->
      {showTrustedBy && (
        <div class="mt-32 pt-8 animate-fade-in opacity-0" style="animation-delay: 0.8s;">
          <p class="text-sm font-medium text-black/60 text-center mb-8 uppercase tracking-widest">
              Trusted by growing teams and enterprise partners
          </p>
          <div class="flex justify-center items-center gap-12 opacity-80 mix-blend-multiply">
              {[1, 2, 3, 4, 5].map(() => (
              <div class="flex items-center gap-2">
                  <div class="w-8 h-8 bg-black rounded-tr-[16px] rounded-bl-[16px] flex items-center justify-center">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 2L2 22H22L12 2Z" fill="white"/>
                    </svg>
                  </div>
                  <span class="text-lg font-bold text-black tracking-tight">Konic Technologies</span>
              </div>
              ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>
