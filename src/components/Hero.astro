---
import GradientStrips from './GradientStrips.astro';

interface Props {
  title: string;
  subtitle: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  centered?: boolean;
  showTrustedBy?: boolean;
}

const { 
  title, 
  subtitle, 
  primaryCta, 
  secondaryCta,
  centered = true,
  showTrustedBy = false
} = Astro.props;
---

<section class="relative bg-[#ffffff] overflow-hidden min-h-[800px] flex items-center">
  <!-- Hero Background Strips -->
  <GradientStrips variant="high-density" />
  
  <!-- Content -->
  <div class="relative z-10 container-custom w-full pt-[120px] pb-32">
    <div class={`${centered ? 'text-center max-w-4xl mx-auto' : 'max-w-3xl'}`}>
      <h1 class="heading-hero text-black mb-8 mt-8 animate-fade-in opacity-0" style="animation-delay: 0.2s;">
        {title}
      </h1>
      <p class="text-xl lg:text-2xl text-black/80 mb-12 animate-fade-in opacity-0 leading-relaxed max-w-2xl mx-auto" style="animation-delay: 0.4s;">
        {subtitle}
      </p>
      
      <div class={`flex flex-col sm:flex-row gap-4 ${centered ? 'justify-center items-center' : ''} animate-fade-in opacity-0`} style="animation-delay: 0.6s;">
        {secondaryCta && (
          <a 
            href={secondaryCta.href}
            class="px-8 py-3 bg-transparent border border-black/20 text-black text-sm font-medium rounded-lg hover:bg-black/5 transition-all"
          >
            {secondaryCta.text}
          </a>
        )}
        {primaryCta && (
          <a 
            href={primaryCta.href}
            class="px-8 py-3 bg-black text-white text-sm font-bold rounded-lg hover:bg-gray-900 transition-all shadow-md"
          >
            {primaryCta.text}
          </a>
        )}
      </div>

      <!-- Trusted By Footer -->
      {showTrustedBy && (
        <div class="mt-32 pt-8 animate-fade-in opacity-0" style="animation-delay: 0.8s;">
          <p class="text-sm font-medium text-black/60 text-center mb-8 uppercase tracking-widest">
              Trusted by growing teams and enterprise partners
          </p>
          <div class="flex justify-center items-center gap-12 opacity-80 mix-blend-multiply">
              {[1, 2, 3, 4, 5].map(() => (
              <div class="flex items-center gap-2">
                  <div class="flex items-center justify-center">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 4L4 20H20L12 4Z" fill="black"/>
                    </svg>
                  </div>
                  <span class="text-lg font-bold text-black tracking-tight">Konic Technologies</span>
              </div>
              ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>
