---
interface Props {
  title: string;
  tagline: string;
  description: string;
  href: string;
  linkText?: string;
}

const { title, tagline, description, href, linkText = 'Learn more' } = Astro.props;
---

<div class="bg-white p-8 text-center rounded-[12px] flex flex-col items-center gap-10 min-w-[320px]">
  <h3 class="heading-card text-black">
    {title}
  </h3>
  <div class="flex flex-col gap-4 items-center">
    <p class="text-base text-black font-bold">
      {tagline}
    </p>
    <p class="text-base text-black leading-relaxed max-w-lg">
      {description}
    </p>
  </div>
  <a 
    href={href}
    class="inline-block px-6 py-2 bg-white border border-gray-200 text-black text-base rounded-[8px] hover:bg-gray-50 transition-all mt-auto"
  >
    {linkText}
  </a>
</div>
