---
interface Props {
  name: string;
  description: string;
  icon: string;
}

const { name, description, icon } = Astro.props;
---

<div class="bg-white p-6 rounded-xl border border-gray-100 hover:border-gray-200 hover:shadow-md transition-all group">
  <div class="w-12 h-12 bg-gray-100 rounded-xl flex items-center justify-center mb-4 group-hover:bg-black group-hover:text-white transition-colors">
    <span class="text-2xl">{icon}</span>
  </div>
  <h3 class="text-lg font-semibold text-black mb-2">{name}</h3>
  <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
</div>
