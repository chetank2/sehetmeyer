---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout 
  title="Contact Us" 
  description="Get in touch with Sehetmeyer. Contact us about IT consulting, recruitment services, or career opportunities."
>
  <!-- Hero Section -->
  <Hero 
    title="Contact Us"
    subtitle="Have a project or a role to discuss? Get in touch."
  />

  <section class="py-24 bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold text-black mb-8">Get in touch</h2>
          
          <p class="text-xl text-black/60 font-medium mb-12 leading-relaxed">
            We respond to all inquiries within 24 hours. Let's discuss how we can help you build better systems or hire better talent.
          </p>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="font-bold text-black text-lg">Email</p>
                <p class="text-black/60 font-medium">hello@sehetmeyer.com</p>
                <p class="text-black/60 font-medium">employers@sehetmeyer.com</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-black rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <p class="font-bold text-black text-lg">Phone</p>
                <p class="text-black/60 font-medium">+1 (555) 123-4567</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-gray-50 p-12 rounded-3xl shadow-sm">
          <h2 class="text-2xl font-bold text-black mb-8 text-center">Send us a message</h2>
          <ContactForm variant="contact" />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
