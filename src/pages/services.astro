---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CTASection from '../components/CTASection.astro';
import { industries } from '../data/industries';
import IndustryCard from '../components/IndustryCard.astro';
---

<BaseLayout 
  title="Services" 
  description="Explore Sehetmeyer's IT consulting and recruitment services. We help businesses build better systems and hire the right talent."
>
  <!-- Hero Section (Gradient) -->
  <Hero 
    title="Services that help you grow"
    subtitle="Choose IT Consulting, Recruitment, or both. We work as your partner, not just a vendor."
    primaryCta={{ text: "Get a Proposal", href: "/contact" }}
  />

  <!-- Services Grid -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- IT Consulting -->
        <div class="flex flex-col">
          <h2 class="heading-section text-black mb-6">IT Consulting</h2>
          <p class="text-xl text-black/60 mb-10 leading-relaxed">
            We improve your product delivery, reduce tech risk, and help your teams move faster.
          </p>
          <div class="space-y-4 mb-12">
            {[
              "Product and UX strategy",
              "Architecture and system planning",
              "Cloud and DevOps guidance",
              "Process improvement (Agile delivery)",
              "Tech audit and roadmap"
            ].map((item) => (
              <div class="flex items-center gap-3">
                <div class="w-1.5 h-1.5 rounded-full bg-accent"></div>
                <span class="text-lg font-medium text-black">{item}</span>
              </div>
            ))}
          </div>
          <a href="/contact" class="inline-block px-8 py-4 bg-black text-white font-bold rounded-lg hover:bg-gray-900 transition-all self-start">Talk to Consulting Team</a>
        </div>

        <!-- IT Recruitment -->
        <div class="flex flex-col">
          <h2 class="heading-section text-black mb-6">IT Recruitment</h2>
          <p class="text-xl text-black/60 mb-10 leading-relaxed">
            We find reliable engineers and tech leaders for your team, with strong screening.
          </p>
          <div class="space-y-4 mb-12">
            {[
              "Contract / Full-time hiring",
              "Bulk hiring",
              "Leadership hiring",
              "Remote / Onsite roles"
            ].map((item) => (
              <div class="flex items-center gap-3">
                <div class="w-1.5 h-1.5 rounded-full bg-accent"></div>
                <span class="text-lg font-medium text-black">{item}</span>
              </div>
            ))}
          </div>
          <a href="/contact" class="inline-block px-8 py-4 bg-black text-white font-bold rounded-lg hover:bg-gray-900 transition-all self-start">Start Hiring</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Engagement Models -->
  <section class="py-32 bg-gray-50">
    <div class="container-custom text-center">
      <h2 class="heading-section text-black mb-16">Engagement models</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-12 rounded-2xl hover:shadow-xl transition-all text-center">
          <h3 class="text-2xl font-bold text-black mb-4">Project-based</h3>
          <p class="text-black/60 font-medium">Fixed scope, clear outcomes.</p>
        </div>
        <div class="bg-white p-12 rounded-2xl hover:shadow-xl transition-all text-center border-2 border-accent">
          <h3 class="text-2xl font-bold text-black mb-4">Retainer</h3>
          <p class="text-black/60 font-medium">Monthly support for ongoing needs.</p>
        </div>
        <div class="bg-white p-12 rounded-2xl hover:shadow-xl transition-all text-center">
          <h3 class="text-2xl font-bold text-black mb-4">Team Augmentation</h3>
          <p class="text-black/60 font-medium">Add talent to your team quickly.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-32 bg-white">
    <div class="container-custom">
      <h2 class="heading-section text-black text-center mb-16">Common Questions</h2>
      <div class="max-w-3xl mx-auto space-y-12">
        <div>
          <h3 class="text-2xl font-bold text-black mb-4">How soon can you share candidates?</h3>
          <p class="text-lg text-black/60 leading-relaxed font-medium">
            Usually within 3â€“7 days, based on role complexity.
          </p>
        </div>
        <div>
          <h3 class="text-2xl font-bold text-black mb-4">Do you support remote roles?</h3>
          <p class="text-lg text-black/60 leading-relaxed font-medium">
            Yes, remote and onsite.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 bg-green-gradient">
    <div class="container-custom text-center">
      <h2 class="heading-section text-black mb-12">Looking for a partner?</h2>
      <a href="/contact" class="inline-block px-12 py-4 bg-black text-white text-lg font-bold rounded-lg hover:bg-gray-900 transition-all shadow-2xl">Get a Proposal</a>
    </div>
  </section>
</BaseLayout>
