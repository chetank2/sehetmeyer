---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TrustedBy from '../components/TrustedBy.astro';
import CheckerBlock from '../components/CheckerBlock.astro';
---

<BaseLayout title="IT Consulting & Recruitment, Done Right">
  <!-- Hero Section (Gradient) -->
  <Hero 
    title="IT Consulting and Recruitment, done right."
    subtitle="We help companies build strong tech teams and deliver reliable IT solutions—fast, simple, and trusted."
    primaryCta={{ text: "Book a Call", href: "/contact" }}
    secondaryCta={{ text: "Explore Services", href: "/services" }}
  />

  <!-- Trusted By (White) -->
  <TrustedBy />

  <!-- What we do? (White) -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <h2 class="heading-hero text-black text-center mb-24">What we do?</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <ServiceCard 
          title="IT Consulting"
          tagline="BUILD BETTER SYSTEMS"
          description="From planning to delivery, we improve your product, process, and tech stack."
          href="/consulting"
          linkText="View Consulting"
        />
        <ServiceCard 
          title="IT Recruitment"
          tagline="HIRE THE RIGHT TALENT"
          description="We find, screen, and deliver quality candidates for your team."
          href="/recruitment"
          linkText="View Recruitment"
        />
      </div>
    </div>
  </section>

  <!-- Why Us? (Checkerboard) -->
  <CheckerBlock 
    title="Why teams choose Sehetmeyer"
    description="We focus on quality, speed, and transparency in every partnership."
    points={[
      "Quality first: Strong screening and clear evaluation.",
      "Speed with control: Fast hiring and fast delivery, without chaos.",
      "Transparent updates: You always know the status.",
      "Flexible models: Contract, full-time, or project basis."
    ]}
    imageSide="left"
  />

  <!-- Our Process (Checkerboard) -->
  <CheckerBlock 
    title="Simple process, clear results"
    description="Our straightforward approach ensures you get the results you need, when you need them."
    points={[
      "Understand your goals and role needs",
      "Plan the right approach (consulting or hiring)",
      "Deliver candidates or solutions",
      "Support after onboarding / go-live"
    ]}
    imageSide="right"
  />

  <!-- Testimonials -->
  <section class="py-32 bg-white">
    <div class="container-custom">
      <h2 class="heading-hero text-black text-center mb-24">What clients say</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {[1, 2, 3, 4].map(() => (
          <div class="text-center">
            <p class="text-sm font-medium text-black leading-relaxed mb-6 italic">
              “Sehetmeyer helped us hire quickly and also improved our delivery process. Smooth communication and strong candidates.”
            </p>
            <p class="text-[10px] font-bold uppercase tracking-widest opacity-40">Build better systems</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Roles (Gradient) -->
  <section class="py-32 bg-green-gradient relative overflow-hidden">
    <div class="absolute inset-0 bg-pattern-stripes opacity-20"></div>
    <div class="container-custom relative z-10 text-center">
      <h2 class="heading-section text-black mb-16">Roles we hire most</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-4 mb-20 text-xs font-bold uppercase tracking-widest text-black">
        <span>Frontend</span>
        <span>Backend</span>
        <span>Full stack</span>
        <span>DevOps</span>
        <span>Data</span>
        <span>QA</span>
        <span>Product</span>
        <span>UI/UX</span>
      </div>
      
      <div class="max-w-2xl mx-auto">
        <h2 class="text-4xl font-bold text-black mb-6">Ready to start?</h2>
        <p class="text-lg font-medium text-black/80 mb-12">Share your requirement or book a call. We respond within 24 hours.</p>
        <a href="/contact" class="inline-block px-10 py-4 bg-black text-white text-lg font-bold rounded-lg hover:bg-gray-900 transition-all shadow-xl">Contact Us</a>
      </div>
    </div>
  </section>
</BaseLayout>
