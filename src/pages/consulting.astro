import Hero from '../components/Hero.astro';
import CTASection from '../components/CTASection.astro';
import FAQAccordion from '../components/FAQAccordion.astro';
import GradientStrips from '../components/GradientStrips.astro';

const services = [
  {
    title: 'System Architecture & Design',
    description: 'Design scalable, maintainable systems that grow with your business. We help you make the right technology decisions from the start.',
    icon: 'üèóÔ∏è',
  },
  {
    title: 'Cloud Migration',
    description: 'Move to the cloud with confidence. We plan and execute migrations to AWS, GCP, or Azure with minimal disruption.',
    icon: '‚òÅÔ∏è',
  },
  {
    title: 'DevOps & CI/CD',
    description: 'Implement modern development practices that accelerate delivery and improve reliability.',
    icon: 'üîÑ',
  },
  {
    title: 'Security & Compliance',
    description: 'Protect your systems and data with comprehensive security audits and compliance implementations.',
    icon: 'üîí',
  },
  {
    title: 'Legacy Modernization',
    description: 'Transform outdated systems into modern, maintainable platforms without disrupting business operations.',
    icon: 'üîß',
  },
  {
    title: 'Technical Due Diligence',
    description: 'Evaluate technology stacks, teams, and processes for M&A, investments, or strategic planning.',
    icon: 'üìã',
  },
];

const faqs = [
  {
    question: 'How do you engage with clients?',
    answer: 'We offer flexible engagement models including project-based consulting, staff augmentation, and fractional CTO services. Most engagements start with a discovery phase to understand your needs before proposing the best approach.',
  },
  {
    question: 'What is your typical project timeline?',
    answer: 'Timelines vary based on scope. Architecture reviews typically take 2-4 weeks. Cloud migrations range from 2-6 months depending on complexity. We always provide detailed timelines during the proposal phase.',
  },
  {
    question: 'Do you work with specific technologies?',
    answer: 'We are technology-agnostic and work with the best tools for your situation. Our expertise spans modern languages (Go, TypeScript, Python, Rust), cloud platforms (AWS, GCP, Azure), and frameworks across the full stack.',
  },
