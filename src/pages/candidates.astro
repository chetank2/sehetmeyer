---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
import CTASection from '../components/CTASection.astro';
import GradientStrips from '../components/GradientStrips.astro';

const benefits = [
  {
    title: 'Access Top Companies',
    description: 'We work with leading tech companies across SaaS, FinTech, Healthcare, and more.',
    icon: 'üè¢',
  },
  {
    title: 'Confidential Search',
    description: 'Your job search stays private. We only share your profile with your approval.',
    icon: 'üîí',
  },
  {
    title: 'Career Guidance',
    description: 'Get advice on compensation, negotiations, and career path from industry experts.',
    icon: 'üéØ',
  },
  {
    title: 'Interview Prep',
    description: 'We help you prepare for technical and behavioral interviews at each company.',
    icon: 'üìù',
  },
  {
    title: 'Salary Insights',
    description: 'Know your worth with accurate market data for your role and experience level.',
    icon: 'üí∞',
  },
  {
    title: 'Long-term Support',
    description: 'We build relationships, not transactions. We\'re here for your entire career.',
    icon: 'ü§ù',
  },
];

const openRoles = [
  'Senior Frontend Engineer',
  'Staff Backend Engineer',
  'Engineering Manager',
  'DevOps Lead',
  'Data Engineer',
  'Mobile Engineer (iOS/Android)',
];
---

<BaseLayout 
  title="For Candidates" 
  description="Find your next engineering role with Sehetmeyer. We connect talented developers with leading technology companies."
>
  <!-- Hero Section -->
  <Hero 
    title="For Candidates"
    subtitle="Find roles that match your skills. We support you from screening to offer."
    primaryCta={{ text: "Upload Resume", href: "#form" }}
  />

  <!-- What to expect -->
  <section class="py-24 bg-white">
    <div class="container-custom">
      <h2 class="heading-section text-black mb-16 text-center">What to expect</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
        {[
          "Profile review",
          "Matching roles",
          "Interview guidance",
          "Follow-ups and feedback",
          "Offer support"
        ].map((step, i) => (
          <div class="p-8 bg-gray-50 rounded-xl border border-gray-100 text-center flex flex-col items-center">
            <div class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mb-6 font-bold text-black">{i+1}</div>
            <p class="text-lg font-bold text-black">{step}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Form Section -->
  <section id="form" class="py-32 bg-gray-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto bg-white p-12 lg:p-20 rounded-3xl shadow-xl">
        <div class="text-center mb-16">
          <h2 class="heading-section text-black mb-6">Join our network</h2>
          <p class="text-xl text-black/60 font-medium leading-relaxed">
            Upload your resume and we‚Äôll reach out when a matching role opens up.
          </p>
        </div>
        <ContactForm variant="candidate" />
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-32 bg-white">
    <div class="container-custom">
      <h2 class="heading-section text-black text-center mb-16">Common Questions</h2>
      <div class="max-w-3xl mx-auto space-y-12">
        <div>
          <h3 class="text-2xl font-bold text-black mb-4">Do you charge candidates?</h3>
          <p class="text-lg text-black/60 leading-relaxed font-medium">
            No, our hiring services are free for candidates.
          </p>
        </div>
        <div>
          <h3 class="text-2xl font-bold text-black mb-4">Will I get feedback?</h3>
          <p class="text-lg text-black/60 leading-relaxed font-medium">
            We share feedback when clients provide it. We strive to keep you updated at every stage.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-32 relative overflow-hidden">
    <GradientStrips variant="low-density" />
    <div class="container-custom text-center">
      <h2 class="heading-section text-black mb-6">Ready for a change?</h2>
      <p class="text-xl text-black/80 mb-12 max-w-2xl mx-auto font-medium">Your next role is waiting.</p>
      <a href="#form" class="inline-block px-12 py-4 bg-black text-white text-lg font-bold rounded-lg hover:bg-gray-900 transition-all shadow-2xl">Upload Resume</a>
    </div>
  </section>
</BaseLayout>

